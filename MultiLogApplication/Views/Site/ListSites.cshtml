@using MultiLogApplication.Models.Common
@model ReturnType<MultiLogApplication.Models.SiteDetails.SiteDetail>

<div class='dashboard-app'>
    <header class='dashboard-toolbar'><a href="#!" class="menu-toggle"><i class="bi bi-list"></i></a></header>
    <div class='dashboard-content'>
        <div class="row mt-4">
            <div class="col-6">
                <h6 class="text-white">Web Site Listing</h6>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-body customtable">
                <h5 class="card-title">Web Sites</h5>
                <!-- Table with hoverable rows -->
                <table class="table table-hover" id="userList">
                    <thead>
                        <tr>
                            <th scope="col">Site Name</th>
                            <th scope="col">Site URL</th>
                            <th scope="col">Image</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var account in Model?.ReturnList)
                        {
                            <tr id="site_@account.SiteId">
                                <td scope="row">@account.SiteName</td>
                                <td>@account.SiteURL</td>
                                <td>@account.SiteImg </td>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" data-toggle="modal" data-target="#UpdateSiteModal" id="updateSite" data-siteId="@account.SiteId"> <i class="bi bi-pencil-square"></i> </button>
                                        <button type="button" data-toggle="modal" data-target="#DeleteSiteModal" id="deleteSite" data-siteId="@account.SiteId"> <i class="bi bi-trash-fill"></i> </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!-- End Table with hoverable rows -->
            </div>
        </div>
    </div>
</div>

<!-- Update sites Modal -->
<div class="modal fade" id="UpdateSiteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="UpdateSiteModalForm">
                <div class="modal-header">
                    <h4 class="modal-title" id="exampleModalLabel">Update Site</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Site Name</label>
                        <input id="siteName" name="siteName" type="text" class="form-control" placeholder="Site Name">
                        <label>Site URL</label>
                        <input id="siteURL" name="siteURL" type="text" class="form-control" placeholder="Site URL">
                        <div method="post" enctype="multipart/form-data" style="margin-top: 10px">
                            <div class="form-group">
                                <div class="col-md-10">
                                    <input type="file" name="files" id="files" />  @*multiple*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Add Site</button>
                    <button type="reset" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Update sites Modal-->
<!-- Delete sites Modal -->
<div class="modal fade" id="DeleteSiteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="exampleModalLabel">Confirm Delete Site!</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <h5>Are you sure you want Delete Site Name?</h5>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="DeleteSitebtn">Delete Site</button>
            </div>
        </div>
    </div>
</div>
<!-- Delete sites Modal -->
