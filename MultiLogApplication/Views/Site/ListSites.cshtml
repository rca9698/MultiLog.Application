@using MultiLogApplication.Models.Common
@inject IConfiguration Configuration
@model ReturnType<MultiLogApplication.Models.SiteDetails.SiteDetail>

    <style>
    #listSites button {
        height: 50%;
        width: 50%;
    }
    </style>

@if (Model != null && Model.ReturnList != null && Model.ReturnList.Count != 0)
{
    @foreach (var siteDetail in Model.ReturnList)
    {
        <div class="card rounded-3 siteColor site_@siteDetail.SiteId">
            <div class="card-body">
                <div class="row Col-12">
                    <div class="col-8">
                        <div class="row col-12">
                            <div class="col-3 text-center">
                                <img class="siteImageSize rounded-circle siteIcon" imageName="@siteDetail.DocumentDetailId.@siteDetail.FileExtenstion" src="@Configuration["StoragePath:SiteIcon:Path"]\@siteDetail.DocumentDetailId.@siteDetail.FileExtenstion" />
                            </div>
                            <div class="col-9 align-self-center">
                                <p class="text-uppercase siteName">@siteDetail.SiteName</p>
                                <p class="siteURL">@siteDetail.SiteURL</p>
                            </div>
                        </div>

                    </div>

                    <div class="col-4 d-grid gap-2 mx-auto">
                        <div class="col-12 row text-center">
                            <button class="rounded-3 btn-primary text-nowrap btn-sm col-6" data-toggle="modal" siteId="@siteDetail.SiteId" data-target="#UpdateSiteModal" id="updateSiteBtn" type="button">Update</button>
                            <button class="btn btn-danger btn-sm col-6 ml-2" data-toggle="modal" siteId="@siteDetail.SiteId" data-target="#DeleteSiteModal" id="deleteSiteBtn" type="button">Delete</button>
                        </div>
                    </div>

                   @*  <div class="col-4 contentAlignType  cursorPointer">
                        <div class="rounded siteBtnbackground BtnFontSize" data-toggle="modal" siteId="@siteDetail.SiteId" data-target="#UpdateSiteModal" id="updateSiteBtn" style="float: right;">Update Site</div>
                        <div class="rounded siteBtnbackground BtnFontSize bgclrred" data-toggle="modal" siteId="@siteDetail.SiteId" data-target="#DeleteSiteModal" id="deleteSiteBtn" style="float: right;margin-left:2px">Delete</div>
                    </div> *@
                </div>
            </div>
        </div>
    }
}
else
{
    <span>
        No Data Found!!!
    </span>
}




