@using MultiLogApplication.Models.Common
@model ReturnType<MultiLogApplication.Models.Account.AccountDetail>

    <div class='dashboard-content'>
        <div class="row mt-4">
            <div class="col-6">
                <h6 class="text-white">Account Request Listing</h6>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-body customtable">
                <h5 class="card-title">Account Requests</h5>
                <!-- Table with hoverable rows -->
                <table class="table table-hover" id="userList">
                    <thead>
                    <tr class="tableHeaderClass">
                            <th scope="col">User Number</th>
                            <th scope="col">User Name</th>
                            <th scope="col">Application</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model !=null && Model.ReturnList!=null){
                            @foreach (var account in Model.ReturnList)
                            {
                                <tr>
                                    <th scope="row">@account.UserName</th>
                                    <td>@account.UserName</td>
                                    <td>@account.SiteName @account.SiteIcon</td>
                                    <td>
                                        <div class="btn-group">
                                            <button type="button" data-toggle="modal" data-target="#AddAccountDetails" data-userId="@account.UserId" data-siteId="@account.SiteId" id="AddAccontRequest"> <i class="bi bi-pencil-square"></i> </button>
                                            <button type="button" data-toggle="modal" data-target="#DeleteAccountRequest" data-userId="@account.UserId" data-siteId="@account.SiteId" id="DeleteAccountRequestList"> <i class="bi bi-trash-fill"></i> </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        
                    </tbody>
                </table>
                <!-- End Table with hoverable rows -->
            </div>
        </div>
    </div>

<!-- Modal -->
<div class="modal fade" id="AddAccountDetails" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title" id="exampleModalLabel">Confirm Add Account</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label>User Name</label>
                        <input id="UserName" type="text" class="form-control" placeholder="User Name">
                        <label>Password</label>
                        <input id="Password" type="password" class="form-control" placeholder="password">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" id="AddAccountRequest">Add Account Details</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Modal -->

<!-- Modal -->
<div class="modal fade" id="DeleteAccountRequest" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="exampleModalLabel">Delete Account Request</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Are you sure, want to delete Account Request?</label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="DeleteAccountRequest">Delete Account Request</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->



