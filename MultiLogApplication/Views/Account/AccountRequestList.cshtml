@using MultiLogApplication.Models.Common
@inject IConfiguration Configuration
@model ReturnType<MultiLogApplication.Models.SiteDetails.AccountRequest>

<div class='dashboard-content'>
    <div class="row mt-4">
        <div class="col-6">
            <h6 class="text-white">Account Request Listing</h6>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-body customtable">
            <h5 class="card-title">Account Requests</h5>
            <!-- Table with hoverable rows -->
            <table class="table table-hover" id="userList">
                <thead>
                    <tr class="tableHeaderClass">
                        <th scope="col">User Number</th>
                        <th scope="col">User Name</th>
                        <th scope="col">Application</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.ReturnList != null && Model.ReturnList.Count != 0)
                    {
                        @foreach (var account in Model.ReturnList)
                        {
                            <tr>
                                <td scope="row">@account.UserNumber</td>
                                <td>@account.UserName</td>
                                <td>@account.SiteName (@account.SiteURL)</td>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" data-toggle="modal" data-target="#CreateIDModal" accountRequestID="@account.AccountRequestID" iconPath="@Configuration["StoragePath:SiteIcon:Path"]\@account.DocumentDetailId.@account.FileExtenstion" id="CreateIDModalBtn"> <i class="bi bi-pencil-square"></i> </button>
                                        <button type="button" data-toggle="modal" data-target="#DeleteAccountRequest" accountRequestID="@account.AccountRequestID" id="DeleteAccountRequestList"> <i class="bi bi-trash-fill"></i> </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="4">No Data Found!!</td></tr>
                    }
                </tbody>
            </table>
            <!-- End Table with hoverable rows -->
        </div>
    </div>
</div>


<!-- Create ID Modal -->
<div class="modal fade" id="CreateIDModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <style>
            .nav-item-divider {
                background-color: rgb(20 24 25 / 30%);
            }
        </style>
        <div class="modal-content">
            <form id="CreateIDModalForm">
                <div class="modal-header">
                    <h4 class="modal-title" id="exampleModalLabel">CREATE ID</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group col-12">
                        <div class="d-flex flex-column text-center col-12">
                            <span style="height: 51px;width: 51px;margin-left: 45%;">
                                <img class="logoicon" src="~/images/banner_ipl.png" style="height:100%;width:100%;border-radius: 50%;margin-top: 4%;
    margin-right: 10%" />
                            </span>
                            <span class="bussiness SiteName">Site Name</span>
                            <span class="plan SiteURL">Site URL</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Username*</label>
                        <input type="text" name="Username" id="Username" class="form-control" placeholder="User Name">
                    </div>
                    <div class="form-group">
                        <label>Password*</label>
                        <input type="text" name="password" id="password" class="form-control" placeholder="Password">
                    </div>
                    <div class="nav-item-divider"></div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success col-12">Create ID</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Create ID Modal-->
<!-- Modal -->
<div class="modal fade" id="DeleteAccountRequest" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="exampleModalLabel">Delete Account Request</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Are you sure, want to delete Account Request?</label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="DeleteAccountRequest">Delete Account Request</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
