@using MultiLogApplication.Models.Common
@inject IConfiguration Configuration
@model ReturnType<MultiLogApplication.Models.Account.IDDetail>

<div class='dashboard-content'>
    <div class="row mt-4">
        <div class="col-12 text-center">
            <p class="text-uppercase">Account Requests</p>
        </div>
    </div>

    <div class="card mt-4 sitebackground siteColor">
        <div class="card-body customtable">
            @* <h5 class="card-title">Account Requests</h5> *@
            <!-- Table with hoverable rows -->
            <table class="table table-hover" id="userList">
                <thead>
                    <tr class="tableHeaderClass">
                        <th scope="col"><p class="">User Number</p></th>
                        <th scope="col"><p class="">Application</p></th>
                        <th scope="col"><p class="">Action</p></th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.ReturnList != null && Model.ReturnList.Count != 0)
                    {
                        @foreach (var account in Model.ReturnList)
                        {
                            <tr id="request_@account.ReqId">
                                <td scope="row" class="userNumber" userName="@account.UserName" userNumber="@account.UserNumber" accountId="@account.AccountId"><p>@account.UserNumber</p></td>
                                <td class="sitedetails" siteName="@account.SiteName" siteUrl="@account.SiteURL" iconPath="@Configuration["StoragePath:SiteIcon:Path"]\@account.DocumentDetailId.@account.FileExtenstion">
                                    <p>@account.SiteName (@account.SiteURL)</p>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" data-toggle="modal" data-target="#CloseIDRequestModal" id="CloseIDRequestBtn" closeAccReqId="@account.ReqId"> <i class="bi bi-pencil-square"></i> </button>
                                        <button type="button" data-toggle="modal" data-target="#DeleteIDRequestModel" id="DeleteIDRequestBtn" closeAccReqId="@account.ReqId"> <i class="bi bi-trash-fill"></i> </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr class="text-center">
                            <td colspan="3">
                                <p>No Data Found!!</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <!-- End Table with hoverable rows -->
        </div>
    </div>
</div>

<!-- Close ID Modal -->
<div class="modal fade" id="CloseIDRequestModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <style>
            .nav-item-divider {
                background-color: rgb(20 24 25 / 30%);
            }
        </style>
        <div class="modal-content siteColor">
            <div>
                <div class="modal-header">
                    <p class="modal-title" id="exampleModalLabel">CLOSE ID</p>
                    <div type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i class="bi bi-x-circle-fill"></i>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="form-group col-12">
                        <div class="d-flex flex-column text-center col-12">
                            <span class="">
                                <img class="siteIcon rounded-circle siteImageSize" src="" />
                            </span>
                            <p class="text-uppercase siteName">Name</p>
                            <p class="siteURL">URL</p>
                            <p class="userName">User Name</p>
                        </div>
                    </div> 
                    <div class="nav-item-divider"></div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn siteBtnbackground col-12" onclick="ConfirmCloseID()">CLOSE ID</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Close ID Modal-->

<!-- Delete ID Modal -->
<div class="modal fade" id="DeleteIDRequestModel" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content siteColor">
            <div class="modal-header">
                <p class="modal-title" id="exampleModalLabel">Delete Account Request</p>
                <div type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i class="bi bi-x-circle-fill"></i>
                </div>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <p>Are you sure, want to delete close ID Request?</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn siteBtnbackground DeleteAccountRequestBtn">Delete Account Request</button>
            </div>
        </div>
    </div>
</div>
<!-- Delete ID Modal -->
