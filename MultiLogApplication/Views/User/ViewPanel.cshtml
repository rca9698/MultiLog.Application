@using MultiLogApplication.Models.Common
@model ReturnType<MultiLogApplication.Models.User.UserDetail>

<div class='dashboard-app'>
    <header class='dashboard-toolbar'><a href="#!" class="menu-toggle"><i class="bi bi-list"></i></a></header>
    <div class='dashboard-content'>
        <div class="row mt-4">
            <div class="col-6">
                <h6 class="text-white">User Listing</h6>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-body">
                <h5 class="card-title">Users</h5>
                <!-- Table with hoverable rows -->
                <table class="table table-hover" id="userList">
                    <thead>
                        <tr>
                            <th scope="col">Mobile Number</th>
                            <th scope="col">User Name</th>
                            <th scope="col">UpdatedBy</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var user in Model?.ReturnList)
                        {
                            <tr>
                                <th scope="row">@user.MobileNumber</th>
                                <td>@user.FirstName</td>
                                <td>@user.UpdatedBy</td>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" data-toggle="modal" data-target="#DeleteUserModal" data-userId=@user.UserId data-Number="@user.MobileNumber" id="deleteUserBtn"> <i class="bi bi-person-fill-slash"></i></button>
                                        <button type="button" data-toggle="modal" data-target="#DepositCoinsModal" data-userId=@user.UserId data-Number="@user.MobileNumber" id="depositeCoinsBtn"> <i class="bi bi-person-fill-up"></i></button>
                                        <button type="button" data-toggle="modal" data-target="#WithdrawCoinsModal" data-userId=@user.UserId data-Number="@user.MobileNumber" id="withdrawCoinsBtn"> <i class="bi bi-person-fill-down"></i> </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!-- End Table with hoverable rows -->
            </div>
        </div>
    </div>
</div>

<!-- Deposit Coins Modal -->
<div class="modal fade" id="DepositCoinsModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="DepositCoinsForm">
                <div class="modal-header">
                    <h4 class="modal-title" id="exampleModalLabel">Deposit</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>User Number</label>
                        <input type="text" id="DepositUserId" name="userNumber" class="form-control" placeholder="User Number">
                        <label>Coins</label>
                        <input type="text" id="DepositCoins" name="coins" class="form-control" placeholder="Coins">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Deposit</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Deposit Coins Modal -->

<!-- Withdraw Coins Modal -->
<div class="modal fade" id="WithdrawCoinsModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="WithdrawCoinsForm">
                <div class="modal-header">
                    <h4 class="modal-title" id="exampleModalLabel">Withdraw</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>User Number</label>
                        <input type="text" id="withdrawUserId" name="userNumber" class="form-control" placeholder="User Number">
                        <label>Coins</label>
                        <input type="text" id="withdrawCoins" name="coins" class="form-control" placeholder="Coins">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Withdraw</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Withdraw Coins Modal-->




