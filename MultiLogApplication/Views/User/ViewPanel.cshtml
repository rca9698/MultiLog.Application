@using MultiLogApplication.Models.Common
@model ReturnType<MultiLogApplication.Models.User.UserDetail>


    <div class="row mt-4">
        <div class="col-6">
            <h6 class="text-white">User Listing</h6>
        </div>
    </div>

<div class="card mt-4 sitebackground siteColor">
        <div class="card-body customtable">
            @* <h5 class="card-title">Users</h5> *@
            <!-- Table with hoverable rows -->
            <table class="table table-hover" id="userList">
                <thead>
                <tr class="tableHeaderClass">
                        <th scope="col">User Number</th>
                        <th scope="col">Created Date</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.ReturnList != null)
                    {
                        @foreach (var user in Model.ReturnList)
                        {
                            <tr>
                                <th scope="row">@user.UserNumber</th>
                                <td>@user.CreatedDate</td>
                                <td>
                                    <div class="btn-group">
                                    <button type="button" data-toggle="modal" data-target="#DeleteUserModal" userId=@user.UserId UserNumber="@user.UserNumber" id="deleteUserBtn"> <i class="bi bi-person-fill-slash"></i></button>
                                    <button type="button" data-toggle="modal" data-target="#DepositCoinsModal" userId=@user.UserId UserNumber="@user.UserNumber" id="depositeCoinsBtn"> <i class="bi bi-person-fill-up"></i></button>
                                    <button type="button" data-toggle="modal" data-target="#WithdrawCoinsModal" userId=@user.UserId UserNumber="@user.UserNumber" id="withdrawCoinsBtn"> <i class="bi bi-person-fill-down"></i> </button>
                                    <button type="button" userId=@user.UserId UserNumber="@user.UserNumber" id="ListCoinsBtn"> <i class="bi bi-cash"></i> </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <!-- End Table with hoverable rows -->
        </div>
    </div>

