@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Sidebar 03</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
    <header>
        
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="main">
                <div class='dashboard'>
                    <div class="dashboard-nav">
                        <header>
                            <a href="" class="menu-toggle"><i class="bi bi-list"></i></a><a href="@Configuration["ApiConfigs:MultilogApp:Uri"]"
                                                                                              class="brand-logo">
                                <i class="fas fa-anchor"></i> <span>BRAND</span>
                            </a>
                        </header>
                        <nav class="dashboard-nav-list">
                            <a href="@Configuration["ApiConfigs:MultilogApp:Uri"]" class="dashboard-nav-item active">
                                <i class="bi bi-house"></i> dashboard
                            </a>
                            
                            <div class='dashboard-nav-dropdown'>
                                <a href="#!" class="dashboard-nav-item dashboard-nav-dropdown-toggle">
                                    <i class="bi bi-person"></i> Accounts
                                </a>
                                <div class='dashboard-nav-dropdown-menu'>
                                    <a href="/Account/AccountRequestList" class="dashboard-nav-dropdown-item"> <i class="bi bi-people"></i> Account Requests</a>
                                    <a href="#" class="dashboard-nav-dropdown-item"> <i class="bi bi-person-fill-add"></i> Created Accounts</a>
                                       <a href="#" class="dashboard-nav-dropdown-item"> <i class="bi bi-person-fill-dash"></i> Rejected Accounts</a>
                                </div>
                            </div>

                            <div class='dashboard-nav-dropdown'>
                                <a href="#!" class="dashboard-nav-item dashboard-nav-dropdown-toggle">
                                    <i class="bi bi-cart"></i> Sites
                                </a>
                                <div class='dashboard-nav-dropdown-menu'>
                                    <a href="/Site/Getsites" class="dashboard-nav-dropdown-item"><i class="bi bi-cart4"></i>Sites</a>
                                    <a href="#" class="dashboard-nav-dropdown-item"><i class="bi bi-cart-plus-fill"></i>Add Site</a>
                                </div>
                            </div>

                            <div class='dashboard-nav-dropdown'>
                                <a href="#!" class="dashboard-nav-item dashboard-nav-dropdown-toggle">
                                    <i class="bi bi-cash-coin"></i> Coin Requests
                                </a>
                                <div class='dashboard-nav-dropdown-menu'>
                                    <a href="/Coin/GetDepositCoinsRequest" class="dashboard-nav-dropdown-item"><i class="bi bi-cash-coin"></i>Desposit Request</a>
                                    <a href="/Coin/GetWithdrawCoinsRequest" class="dashboard-nav-dropdown-item"><i class="bi bi-cash-coin"></i>Withdraw Request</a>
                                </div>
                            </div>

                            <div class='dashboard-nav-dropdown'>
                                <a href="#!" class="dashboard-nav-item dashboard-nav-dropdown-toggle">
                                    <i class="bi bi-people"></i> Users
                                </a>
                                <div class='dashboard-nav-dropdown-menu'>
                                    <a href="/User/GetUsers" class="dashboard-nav-dropdown-item"><i class="bi bi-people"> </i>List User</a>
                                    <a href="#" class="dashboard-nav-dropdown-item"><i class="bi bi-person-add"></i>Add Users</a>
                                </div>
                            </div>                             
                            <a href="#" class="dashboard-nav-item"><i class="bi bi-person"></i> Profile </a>
                            <div class="nav-item-divider"></div>
                            <a href="#" class="dashboard-nav-item"><i class="bi bi-person-fill-x"></i> Logout </a>
                        </nav>
                    </div>
            @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MultiLogApplication - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    
    <script src="~/js/jquery.min.js"></script>
    <script src="~/formvalidationio/js/formvalidation.min.js"></script>
    <script src="~/formvalidationio/js/plugins/bootstrap3.js"></script>
    <script src="~/js/popper.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/login.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
