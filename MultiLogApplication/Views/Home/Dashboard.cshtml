<link href="~/css/dashboard.css" rel="stylesheet" />
@model MultiLogApplication.Models.Dashboard.DashboardModel
@inject IConfiguration Configuration;
@inject IHttpContextAccessor Accessor;

@{
    var coins = Accessor.HttpContext.Session.GetString("Coins");
    var userId = Accessor.HttpContext.Session.GetString("UserId");
    var userNumber = Accessor.HttpContext.Session.GetString("UserNumber");
}

<div class='dashboard-content'>
    <div class="row" style="padding-bottom: 50px;">


        @if (User.Identity.IsAuthenticated)
        {
            <div class="main-container">
                <div class="account-container">
                    <div class="depwith">
                        <div class="deposite acc-content" data-toggle="modal" data-target="#DepositCoinsRequestModal" id="DepositCoinsRequestModalBtn" userId="@userId" userNumber="@userNumber">
                            <div>DEPOSIT</div>
                            <i class="arrow up"></i>
                            <i class="arrow up"></i>
                        </div>
                        <div class="withdraw acc-content" data-toggle="modal" data-target="#WithdrawCoinsRequestModal" id="WithdrawCoinsRequestModalBtn" userId="@userId" userNumber="@userNumber">
                            <div>WITHDRAW</div>
                            <i class="arrow down"></i>
                            <i class="arrow down"></i>
                        </div>
                    </div>
                    <div class="wallet acc-content">
                        <img src="/images/kapunterIcon.jpg" alt="">
                        <div>WALLET BALANCE</div>
                        <div>@coins</div>
                    </div>
                </div>
            </div>

            @*   <div class="row col-12 text-white">
        <div class="col-4 inline">
