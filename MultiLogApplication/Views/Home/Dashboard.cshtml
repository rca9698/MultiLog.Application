<link href="~/css/dashboard.css" rel="stylesheet" />
@model MultiLogApplication.Models.Dashboard.DashboardModel
@inject IConfiguration Configuration;
@inject IHttpContextAccessor Accessor;

@{
    var coins = Accessor.HttpContext.Session.GetString("Coins");
    var userId = Accessor.HttpContext.Session.GetString("UserId");
    var userNumber = Accessor.HttpContext.Session.GetString("UserNumber");
}

<div class='dashboard-content'>
    <div class="row" style="padding-bottom: 50px;">


        @if (User.Identity.IsAuthenticated)
        {
            <div class="row col-12 text-white">
                <div class="col-4 inline">
                    <div class="card sitebackground leftCard" data-toggle="modal" data-target="#DepositCoinsRequestModal" id="DepositCoinsRequestModalBtn" userId="@userId" userNumber="@userNumber">
                        <div class="container">
                            <h6 style="margin-left: 10%;margin-top: 30%">
                                <b class="DashboardIconText">DEPOSIT</b>
                            </h6>
                            <h1 style="margin-left: 20%;">
                                <i class="bi bi-chevron-double-up"></i>
                            </h1>

                        </div>
                    </div>
                </div>

                <div class="col-4 inline">
                    <div class="card sitebackground middleCard">
                        <div class="container">
                            <img src="~/images/kapunterIcon.jpg" alt="cricket ipl" class="DashboardIcontopradius">
                            <h6 class="font-weight-normal DashboardIconText">
                                WALLET BALANCE
                            </h6>
                            <h3 class="font-weight-normal DashboardIconText">@coins</h3>
                        </div>
                    </div>
                </div>

                <div class="col-4 inline">
                    <div class="card sitebackground rightCard" data-toggle="modal" data-target="#WithdrawCoinsRequestModal" id="WithdrawCoinsRequestModalBtn" userId="@userId" userNumber="@userNumber">
                        <div class="container">
                            <h6 style="margin-left:35%;margin-top:28%;"><b class="DashboardIconText">WITHDRAW</b></h6>
                            <h1 style="margin-left:40%"><i class="bi bi-chevron-double-down"></i></h1>
                        </div>
                    </div>
                </div>

            </div>
        }
        else
        {
            <div class="row col-12 text-white" id="loginNotification">
                <div class="col-4 inline">
                    <div class="card sitebackground leftCard">
                        <div class="container">
                            <h6 style="margin-left: 10%;margin-top: 30%">
                                <b class="DashboardIconText">DEPOSIT</b>
                            </h6>
                            <h1 style="margin-left: 20%;">
                                <i class="bi bi-chevron-double-up"></i>
                            </h1>

                        </div>
                    </div>
                </div>

                <div class="col-4 inline">
                    <div class="card sitebackground middleCard">
                        <div class="container">
                            <img src="~/images/kapunterIcon.jpg" alt="cricket ipl" class="DashboardIcontopradius">
                            <h6 class="font-weight-normal DashboardIconText">
                                WALLET BALANCE
                            </h6>
                            <h3 class="font-weight-normal DashboardIconText">@coins</h3>
                        </div>
                    </div>
                </div>

                <div class="col-4 inline">
                    <div class="card sitebackground rightCard">
                        <div class="container">
                            <h6 style="margin-left:35%;margin-top:28%;"><b class="DashboardIconText">WITHDRAW</b></h6>
                            <h1 style="margin-left:40%"><i class="bi bi-chevron-double-down"></i></h1>
                        </div>
                    </div>
                </div>

            </div>
        }


    </div>
    <img src="~/images/banner_ipl.png" alt="cricket ipl" width="100%" height="auto">

    @if (User.Identity.IsAuthenticated && Model.SiteDetail != null)
    {
        <div class="mt-4 bg-dark rounded">
            <div class="row col-12">
                <div class="col-6">
                    <h6 class="text-white" style="padding-right: 15px;font-size: smaller;">My IDs</h6>
                </div>
                <div class="col-6 d-flex justify-content-end">
                    <a href="#" class="text-white IDsList" style="padding-right: 15px;font-size: smaller;">
                        <i class="bi bi-plus-circle-fill"></i> Create ID
                    </a>
                    <a href="#" class="text-primary" style="padding-right: 15px;font-size: smaller;">View All</a>
                </div>
            </div>
        </div>

        <div class="card text-white rounded sitebackground dashboardSite site_@Model.SiteDetail.SiteId" style="padding: 30px;">
            <div class="row Col-12 bg-dark-1 p-2 rounded">
                <div class="col-10">
                    <div class="row col-12">
                        <div class="col-3">
                            <img src="@Configuration["StoragePath:SiteIcon:Path"]\@Model.SiteDetail.DocumentDetailId.@Model.SiteDetail.FileExtenstion" alt="cricket ipl" class="rounded siteImageSize siteIcon">
                        </div>
                        <div class="col-9 align-self-center">
                            <p class="fw-bolder siteName"> @Model.SiteDetail.SiteName</p>
                            <p class="fw-normal siteURL"> @Model.SiteDetail.SiteURL </p>
                        </div>
                    </div>

                </div>
                <div class="col-2">
                    <a href="@Model.SiteDetail.SiteURL" target="_blank">
                        <i class="bi bi-arrow-up-right-square-fill" style="float: right;"></i>
                    </a>

                </div>
            </div>
            <div class="row Col-12 bg-dark-1 p-2">
                <div class="col-3 grid-margin stretch-card bg-dark-1 rounded text-center" data-toggle="modal" data-target="#DepositeToAccountRequestModal" siteid="@Model.SiteDetail.SiteId" id="DepositeToAccountRequestCoinsBtn">
                    <div class="card bg-dark p-2">
                        <div class="card-body text-center">
                            <div class="row">
                                <i class="bi bi-chevron-double-up" style="color: green;"></i>
                            </div>
                            <p class="fw-bolder">
                                Deposite
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-3 grid-margin stretch-card bg-dark-1 rounded text-center" data-toggle="modal" data-target="#WithDrawToAccountRequestModal" siteid="@Model.SiteDetail.SiteId" id="withdrawFromAccountRequestCoinsBtn">
                    <div class="card bg-dark p-2">
                        <div class="card-body text-center">
                            <div class="row">
                                <i class="bi bi-chevron-double-down" style="color: darkred;"></i>
                            </div>
                            <p class="fw-bolder">
                                Withdraw 
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-3 grid-margin stretch-card bg-dark-1 rounded text-center">
                    <div class="card bg-dark p-2">
                        <div class="card-body text-center">
                            <div class="row">
                                <i class="bi bi-key-fill"></i>
                            </div>
                            <p class="fw-bolder">
                                Password
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-3 grid-margin stretch-card bg-dark-1 rounded text-center">
                    <div class="card bg-dark p-2">
                        <div class="card-body text-center">
                            <div class="row">
                                <i class="bi bi-ticket-detailed-fill"></i>
                            </div>
                            <p class="fw-bolder">
                                 View Detail
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
</div>

