<link href="~/css/dashboard.css" rel="stylesheet" />

@inject IHttpContextAccessor Accessor;
@{
    var coins = Accessor.HttpContext.Session.GetString("Coins");
}

<div class='dashboard-content'>
    <div class="row" style="padding-bottom: 50px;">

        <div class="row col-12">
            <div class="col-4 inline">
                <div class="card sitebackground leftCard" data-toggle="modal" data-target="#DepositCoinsRequestModal" id="DepositCoinsRequestModalBtn">
                    <div class="container">
                        <h6 style="margin-left: 10%;margin-top: 30%">
                            <b class="DashboardIconText">DEPOSIT</b>
                        </h6>
                        <h1 style="margin-left: 20%;">
                            <i class="bi bi-chevron-double-up"></i>
                        </h1>

                    </div>
                </div>
            </div>

            <div class="col-4 inline">
                <div class="card sitebackground middleCard">
                    <div class="container">
                        <img src="~/images/kapunterIcon.jpg" alt="cricket ipl" class="DashboardIcontopradius">
                        <h6 class="text-muted font-weight-normal DashboardIconText">
                            WALLET BALANCE
                        </h6>
                        <h3 class="text-muted font-weight-normal DashboardIconText">@coins</h3>
                    </div>
                </div>
            </div>

            <div class="col-4 inline">
                <div class="card sitebackground rightCard" data-toggle="modal" data-target="#WithdrawCoinsRequestModal" id="WithdrawCoinsRequestModalBtn" userId="1" userNumber="1">
                    <div class="container">
                        <h6 style="margin-left:35%;margin-top:28%;"><b class="DashboardIconText">WITHDRAW</b></h6>
                        <h1 style="margin-left:40%"><i class="bi bi-chevron-double-down"></i></h1>
                    </div>
                </div>
            </div>

        </div>
       
    </div>
    <img src="~/images/banner_ipl.png" alt="cricket ipl" width="100%" height="auto">

    <div class="mt-4 bg-dark">
        <div class="row col-12">
            <div class="col-6">
                <h6 class="text-white" style="padding-right: 15px;font-size: smaller;">My IDs</h6>
            </div>
            <div class="col-6 d-flex justify-content-end">
                <a href="#" class="text-white" style="padding-right: 15px;font-size: smaller;">
                    <i class="bi bi-plus-circle-fill"></i> Create ID
                </a>
                <a href="#" class="text-primary" style="padding-right: 15px;font-size: smaller;">View All</a>
            </div>
        </div>
    </div>

    <div class="card" style="background: #222; padding: 30px;">
        <div class="row">
            <a class="nav-link collapsed" href="pages-faq.html">
                <i class="bi bi-question-circle"></i>
                <span>CBTF</span>
            </a>
            <a class="nav-link collapsed" href="users-profile.html">
                <i class="bi bi-person"></i>
                <span>Vikas S</span>
            </a>
        </div>
        <div class="card" style="background: #3e3e3e;">
            <div class="col-12" style="display: flex;">
                <div class="col-3 grid-margin stretch-card" data-toggle="modal" data-target="#DepositCoinsRequestModal" id="DepositCoinsRequestModalBtn">
                    <div class="card" style="background: black;">
                        <div class="card-body text-center">
                            <div class="row">
                                <i class="bi bi-chevron-double-up" style="color: green;"></i>
                            </div>
                            <h6 class="text-muted font-weight-normal">
                                <a href="#" style="font-size: 12px"> Deposite </a>
                            </h6>
                        </div>
                    </div>
                </div>
                <div class="col-3 grid-margin stretch-card" data-toggle="modal" data-target="#WithdrawCoinsRequestModal" id="WithdrawCoinsRequestModalBtn">
                    <div class="card" style="background: black;">
                        <div class="card-body text-center">
                            <div class="row">
                                <i class="bi bi-chevron-double-down" style="color: darkred;"></i>
                            </div>
                            <h6 class="text-muted font-weight-normal">
                                <a href="#" style="font-size: 12px"> Withdraw </a>
                            </h6>
                        </div>
                    </div>
                </div>
                <div class="col-3 grid-margin stretch-card">
                    <div class="card" style="background: black;">
                        <div class="card-body text-center">
                            <div class="row">
                                <i class="bi bi-key-fill"></i>
                            </div>
                            <h6 class="text-muted font-weight-normal">
                                <a href="#" style="font-size: 12px"> Password </a>
                            </h6>
                        </div>
                    </div>
                </div>
                <div class="col-3 grid-margin stretch-card">
                    <div class="card" style="background: black;">
                        <div class="card-body text-center">
                            <div class="row">
                                <i class="bi bi-ticket-detailed-fill"></i>
                            </div>
                            <h6 class="text-muted font-weight-normal">
                                <a href="#" style="font-size: 12px"> View Detail </a>
                            </h6>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>


