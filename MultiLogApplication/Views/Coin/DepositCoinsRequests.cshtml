@using MultiLogApplication.Models.Common
@inject IConfiguration Configuration
@model ReturnType<MultiLogApplication.Models.Coin.CoinsRequestModel>

<div class="row mt-4">
    <div class="col-12 text-center">
        <p class="text-uppercase">Deposit Coin Request</p>
    </div>
</div>

<div class="card mt-4 sitebackground siteColor">
    <div class="card-body customtable">
        @* <h5 class="card-title">Deposit Coin Request</h5> *@
        <!-- Table with hoverable rows -->
        <table class="table table-hover" id="userList">
            <thead>
                <tr class="tableHeaderClass">
                    <th scope="col"><p class="text-uppercase">User Name</p></th>
                    <th scope="col"><p class="text-uppercase">Coins</p></th>
                    <th scope="col"><p class="text-uppercase">Request Date</p></th>
                    <th scope="col"><p class="text-uppercase">Action</p></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.ReturnList != null && Model.ReturnList.Count != 0)
                {
                    @foreach (var user in Model.ReturnList)
                    {
                        <tr>
                            <td scope="row"><p>@user.UserNumber</p></td>
                            <td><p>@user.Coins</p></td>
                            <td><p>@user.CreatedDate</p></td>
                            <td>
                                <div class="btn-group">
                                    <button type="button" data-toggle="modal" data-target="#ViewCoinRequestProof" userId=@user.UserId UserNumber="@user.UserNumber" coinRequestId="@user.CoinsRequestId" proofPath="@Configuration["StoragePath:paymentProof:Path"]\@user.DocumentDetailId.@user.FileExtenstion" id="viewCoinRequestproofBtn"> <i class="bi bi-eye-fill"></i></button>
                                    <button type="button" data-toggle="modal" data-target="#DepositCoinsModal" userId=@user.UserId UserNumber="@user.UserNumber" coinRequestID="@user.CoinsRequestId" Coins="@user.Coins" id="depositeCoinsBtn"> <i class="bi bi-person-fill-up"></i></button>
                                    <button type="button" data-toggle="modal" data-target="#DeleteCoinRequest" userId=@user.UserId UserNumber="@user.UserNumber" coinRequestId="@user.CoinsRequestId" id="deleteCoinRequestBtn"> <i class="bi bi-person-fill-slash"></i></button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr class="text-center"><td colspan="5"><p>No Data Found!!</p></td></tr>
                }
            </tbody>
        </table>
        <!-- End Table with hoverable rows -->
    </div>
</div>




