@using MultiLogApplication.Models.Common
@model ReturnType<MultiLogApplication.Models.Coin.CoinsRequestModel>

<div class="row mt-4">
    <div class="col-6">
        <h6 class="text-white">Coins History (<span id="coinHistoryUserid"></span>)</h6>
    </div>
</div>

<div class="card mt-4 sitebackground siteColor">
    <div class="card-body customtable">
        @* <h5 class="card-title">Coins History</h5> *@
        <!-- Table with hoverable rows -->
        <table class="table table-hover" id="coinList">
            <thead>
                <tr>
                    <th scope="col">Coins</th>
                    <th scope="col">Coin Type</th>
                    <th scope="col">Transaction By</th>
                    <th scope="col">Transaction Date</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.ReturnList != null && Model.ReturnList.Count != 0)
                {
                    @foreach (var user in Model.ReturnList)
                    {
                        <tr class="@user.CoinTypeColor">
                            <td>@user.Coins</td>
                            <td>@user.CoinType</td>
                            <td>@user.UpdatedBy</td>
                            <td>@user.UpdatedDate</td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="5">No Data Found!!</td></tr>
                }
            </tbody>
        </table>
        <!-- End Table with hoverable rows -->
    </div>
</div>




